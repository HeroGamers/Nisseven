link(rel='stylesheet', href='/css/nisseven.css')
script(src="/js/join_create.js")

.container
    if user && user.nisseven != null
        .row.mt-5
            .col-md-12.text-center
                p Du har en nisseven!
        .row
            .col-md-12.d-flex.justify-content-center
                .revealer.rounded.border.border-dark.user-select-none.text-center
                    p#nisseven.d-inline-block #{ user.nisseven }
        .row.mt-2
            .col-md-12.dflex.justify-content-center.text-center
                button#decryptbutton.d-inline-block.btn.btn-success.btn-sm(type='button' onclick='showNisseven()') Dekrypter Nisseven
    else if _klasse == false
        .row.mt-5
            .col-md-12.text-center
                h1 Du er ikke medlem af en klasse :(

                button#join.btn.btn-primary.btn-lg.m-2(type="button" onclick="join()") Tilmeld klasse
                button#create.btn.btn-secondary.btn-lg.m-2(type="button" onclick="create()") Opret klasse
    else
        .row.mt-5
            .col-md-12.text-center
                h1 Nissevenner uddeles om
                p#time Loading...
        .row.mt-5.justify-content-center
            .card.mr-5(style="width: 18rem;")
                .card-body
                    h5.card-title Inviter dine venner!
                    h6.card-subtitle.mb-2.text-muted #{ _inviteLink }
                    p.card-text Andre kan bruge denne kode til at tilslutte din klasse.

            .card.ml-5(style="width: 18rem;")
                .card-body
                    if _isAdmin
                        h5.card-title Omdøb klassens navn
                        input#renameInput(type="text" class="form-control" placeholder=_kName aria-label="Klassens navn" aria-describedby="basic-addon1")
                        button#renameBtn.btn.btn-danger.btn-sm.mt-3.float-right(type="button") Omdøb
                    else
                        h5.card-title Klassens navn er:
                        h6.card-subtitle.mb-2.mt-4.text-muted #{ _kName }
                    

